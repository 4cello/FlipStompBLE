    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN0";

        input-gpios = <
            &xiao_d GPIO_PEDAL (GPIO_ACTIVE_LOW | GPIO_PULL_UP) 
            &xiao_d GPIO_LAYER (GPIO_ACTIVE_LOW | GPIO_PULL_UP) 
            &xiao_d GPIO_BLUETOOTH (GPIO_ACTIVE_LOW | GPIO_PULL_UP)
        >;
    };

    default_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <3>;
        columns = <1>;
        map = <
            RC(0,0)
            RC(0,1)
            RC(0,2)
        >;
    };

    keymap {
        compatible = "zmk,keymap";
        left_right_layer {
            bindings = <
                &mt LEFT_ARROW RIGHT_ARROW
                &mo UP_DOWN_LAYER
                &td_mt
            >;
        };
        up_down_layer {
            bindings = <
                &mt UP_ARROW DOWN_ARROW
                &none
                &td_mt
            >;
        };
    };
};